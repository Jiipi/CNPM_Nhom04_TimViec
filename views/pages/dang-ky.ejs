<%- contentFor('extraJS') %>
<script>
    $(document).ready(function() {
        // Xử lý toggle password
        $('.toggle-password').on('click', function() {
            const targetId = $(this).data('target');
            const passwordInput = $(targetId);
            const icon = $(this).find('i');
            
            if (passwordInput.attr('type') === 'password') {
                passwordInput.attr('type', 'text');
                icon.removeClass('fa-eye').addClass('fa-eye-slash');
            } else {
                passwordInput.attr('type', 'password');
                icon.removeClass('fa-eye-slash').addClass('fa-eye');
            }
        });
        
        // Kiểm tra mật khẩu khớp nhau cho ứng viên
        function validateCandidatePassword() {
            const password = $('#candidate_password').val();
            const confirm = $('#candidate_confirmPassword').val();
            
            if (password && confirm && password !== confirm) {
                $('#candidate_confirmPassword').addClass('is-invalid');
                return false;
            } else {
                $('#candidate_confirmPassword').removeClass('is-invalid');
                return true;
            }
        }
        
        // Kiểm tra mật khẩu khớp nhau cho nhà tuyển dụng
        function validateRecruiterPassword() {
            const password = $('#recruiter_password').val();
            const confirm = $('#recruiter_confirmPassword').val();
            
            if (password && confirm && password !== confirm) {
                $('#recruiter_confirmPassword').addClass('is-invalid');
                return false;
            } else {
                $('#recruiter_confirmPassword').removeClass('is-invalid');
                return true;
            }
        }
        
        // Kiểm tra mật khẩu khi nhập
        $('#candidate_password, #candidate_confirmPassword').on('input', validateCandidatePassword);
        $('#recruiter_password, #recruiter_confirmPassword').on('input', validateRecruiterPassword);
        
        // Xử lý đăng ký ứng viên
        $('#candidateRegisterForm').on('submit', function(e) {
            e.preventDefault();
            
            if (!validateCandidatePassword()) {
                displayResult('Mật khẩu xác nhận không khớp với mật khẩu.', 'danger');
                return false;
            }
            
            const formData = {
                hoTen: $('#candidate_hoTen').val(),
                email: $('#candidate_email').val(),
                sdt: $('#candidate_sdt').val(),
                password: $('#candidate_password').val(),
                vaiTro: 'UngVien'
            };
            
            // Hiển thị loading
            const submitBtn = $(this).find('button[type="submit"]');
            const originalText = submitBtn.text();
            submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Đang xử lý...');
            
            // Gửi request
            $.ajax({
                url: '/api/tai-khoan/dang-ky',
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        displayResult('Đăng ký thành công! Vui lòng đăng nhập để tiếp tục.', 'success');
                        setTimeout(() => {
                            window.location.href = '/ung-vien/dang-nhap';
                        }, 2000);
                    } else {
                        displayResult(response.message || 'Đăng ký thất bại.', 'danger');
                        submitBtn.prop('disabled', false).text(originalText);
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Đã xảy ra lỗi khi đăng ký.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    displayResult(errorMsg, 'danger');
                    submitBtn.prop('disabled', false).text(originalText);
                }
            });
        });
        
        // Xử lý đăng ký nhà tuyển dụng
        $('#recruiterRegisterForm').on('submit', function(e) {
            e.preventDefault();
            
            if (!validateRecruiterPassword()) {
                displayResult('Mật khẩu xác nhận không khớp với mật khẩu.', 'danger');
                return false;
            }
            
            const formData = {
                hoTen: $('#recruiter_hoTen').val(),
                email: $('#recruiter_email').val(),
                sdt: $('#recruiter_sdt').val(),
                password: $('#recruiter_password').val(),
                vaiTro: 'NhaTuyenDung',
                thongTin: {
                    tenCongTy: $('#recruiter_tenCongTy').val()
                }
            };
            
            // Hiển thị loading
            const submitBtn = $(this).find('button[type="submit"]');
            const originalText = submitBtn.text();
            submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Đang xử lý...');
            
            // Gửi request
            $.ajax({
                url: '/api/tai-khoan/dang-ky',
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        displayResult('Đăng ký thành công! Vui lòng đăng nhập để tiếp tục.', 'success');
                        setTimeout(() => {
                            window.location.href = '/nha-tuyen-dung/dang-nhap';
                        }, 2000);
                    } else {
                        displayResult(response.message || 'Đăng ký thất bại.', 'danger');
                        submitBtn.prop('disabled', false).text(originalText);
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Đã xảy ra lỗi khi đăng ký.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    displayResult(errorMsg, 'danger');
                    submitBtn.prop('disabled', false).text(originalText);
                }
            });
        });
        
        // Hiển thị thông báo
        function displayResult(message, type) {
            $('#registerResult')
                .removeClass('d-none alert-success alert-danger alert-warning')
                .addClass('alert-' + type)
                .html(message);
        }
    });
</script>


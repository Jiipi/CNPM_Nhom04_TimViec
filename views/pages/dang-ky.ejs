<%- contentFor('body') %>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="modal-content p-0" style="max-width: 500px; width: 100%; margin: 40px auto;">
        <div class="modal-header border-0 pb-0 d-flex justify-content-end">
            <a href="/" class="close" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </a>
        </div>
        <div class="modal-body px-4 pt-0 pb-4">
            <div class="text-center mb-4">
                <img src="/images/logo.jpg" alt="MY JOB Logo" class="logo mb-2" style="max-width: 120px;">
                <h4 class="font-weight-bold">Đăng ký/ Đăng nhập</h4>
                <p class="text-muted">Liên kết tài khoản của bạn để tiếp tục sử dụng dịch vụ</p>
            </div>
            
            <ul class="nav nav-tabs nav-fill mb-4" id="registerTabs" role="tablist">
                <li class="nav-item flex-grow-1" role="presentation">
                    <button class="nav-link active w-100" id="register-candidate-tab" data-bs-toggle="tab" data-bs-target="#register-candidate" type="button" role="tab" aria-controls="register-candidate" aria-selected="true">Ứng viên</button>
                </li>
                <li class="nav-item flex-grow-1" role="presentation">
                    <button class="nav-link w-100" id="register-recruiter-tab" data-bs-toggle="tab" data-bs-target="#register-recruiter" type="button" role="tab" aria-controls="register-recruiter" aria-selected="false">Nhà tuyển dụng</button>
                </li>
            </ul>
            
            <!-- Thông báo kết quả đăng ký -->
            <div id="registerResult" class="alert d-none mb-3"></div>
            
            <div class="tab-content" id="registerTabContent">
                <!-- Tab đăng ký ứng viên -->
                <div class="tab-pane fade show active" id="register-candidate" role="tabpanel" aria-labelledby="register-candidate-tab">
                    <form id="candidateRegisterForm" action="/dang-ky" method="post">
                        <div class="mb-3">
                            <label for="candidate_hoTen" class="form-label">Họ tên</label>
                            <input type="text" class="form-control" id="candidate_hoTen" name="hoTen" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="candidate_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="candidate_email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="candidate_sdt" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="candidate_sdt" name="sdt" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="candidate_password" class="form-label">Mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="candidate_password" name="password" minlength="6" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" data-target="#candidate_password">
                                    <i class="far fa-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="candidate_confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="candidate_confirmPassword" name="confirmPassword" minlength="6" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" data-target="#candidate_confirmPassword">
                                    <i class="far fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="candidate_dieuKhoan" name="dieuKhoan" required>
                            <label class="form-check-label" for="candidate_dieuKhoan">
                                Tôi đồng ý với <a href="#" target="_blank">Điều khoản sử dụng</a> và <a href="#" target="_blank">Chính sách bảo mật</a>
                            </label>
                        </div>
                        
                        <input type="hidden" name="vaiTro" value="UngVien">
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Đăng Ký</button>
                        </div>
                        
                        <div class="text-center mt-3">
                            <p>Đã có tài khoản? <a href="/ung-vien/dang-nhap">Đăng nhập ngay</a></p>
                        </div>
                    </form>
                </div>
                
                <!-- Tab đăng ký nhà tuyển dụng -->
                <div class="tab-pane fade" id="register-recruiter" role="tabpanel" aria-labelledby="register-recruiter-tab">
                    <form id="recruiterRegisterForm" action="/dang-ky" method="post">
                        <div class="mb-3">
                            <label for="recruiter_hoTen" class="form-label">Họ tên người liên hệ</label>
                            <input type="text" class="form-control" id="recruiter_hoTen" name="hoTen" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="recruiter_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="recruiter_email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="recruiter_sdt" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="recruiter_sdt" name="sdt" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="recruiter_tenCongTy" class="form-label">Tên công ty</label>
                            <input type="text" class="form-control" id="recruiter_tenCongTy" name="tenCongTy" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="recruiter_password" class="form-label">Mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="recruiter_password" name="password" minlength="6" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" data-target="#recruiter_password">
                                    <i class="far fa-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="recruiter_confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="recruiter_confirmPassword" name="confirmPassword" minlength="6" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" data-target="#recruiter_confirmPassword">
                                    <i class="far fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="recruiter_dieuKhoan" name="dieuKhoan" required>
                            <label class="form-check-label" for="recruiter_dieuKhoan">
                                Tôi đồng ý với <a href="#" target="_blank">Điều khoản sử dụng</a> và <a href="#" target="_blank">Chính sách bảo mật</a>
                            </label>
                        </div>
                        
                        <input type="hidden" name="vaiTro" value="NhaTuyenDung">
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Đăng Ký</button>
                        </div>
                        
                        <div class="text-center mt-3">
                            <p>Đã có tài khoản? <a href="/nha-tuyen-dung/dang-nhap">Đăng nhập ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('title') %>

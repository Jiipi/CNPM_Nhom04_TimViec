      <button type="button" class="btn btn-sm btn-outline-primary mx-1"></button>
      <button type="button" class="btn btn-sm btn-outline-primary mx-1"></button>
    </div>
  </div>
</section>
    
<!-- Nhà tuyển dụng nổi bật -->

      console.log("🔴 TRANG CHỦ: Giá trị lấy trực tiếp từ getAttribute:", directAttr);
      
      // Nếu vẫn không có, thử đọc từ HTML trực tiếp
      if (!maCV && !directAttr) {
        var htmlContent = $(this).html();
        console.log("🔴 TRANG CHỦ: HTML của nút:", htmlContent);
        // Tìm kiếm ID trong các thuộc tính khác
        var parentElement = $(this).closest('.job-item, .card');
        var possibleId = parentElement.find('a[href*="/chi-tiet-cong-viec/"]').attr('href');
        if (possibleId) {
          possibleId = possibleId.split('/').pop();
          console.log("🔴 TRANG CHỦ: ID tìm từ URL chi tiết:", possibleId);
          maCV = possibleId;
        }
      }
      
      // Log tất cả các thuộc tính data của nút
      var allData = $(this).data();
      console.log("🔴 TRANG CHỦ: TẤT CẢ DATA ATTRIBUTES:", JSON.stringify(allData));
      
      // Kiểm tra lại giá trị maCV (ID công việc)
      if (maCV === 'undefined' || maCV === '') {
        console.error("maCV không hợp lệ");
        alert("Không thể lưu việc làm này. ID công việc không hợp lệ!");
        return;
      }
      var btn = $(this);
      
      if (!maCV) {
        console.error("Không tìm thấy ID công việc (maCV)");
        alert("Không thể lưu việc làm này. ID công việc không hợp lệ!");
        return;
      }
      
      // Lấy dữ liệu đăng nhập từ data attribute và chuyển thành boolean
      var isLoggedIn = $('body').data('user-logged-in') === true || $('body').data('user-logged-in') === "true";
      var isUngVien = $('body').data('user-is-ungvien') === true || $('body').data('user-is-ungvien') === "true";
      
      // Cách khác để kiểm tra đăng nhập từ biến toàn cục
      isLoggedIn = isLoggedIn || (window.userLoggedIn === "true");
      isUngVien = isUngVien || (window.userIsUngVien === "true");
      
      console.log("Trạng thái đăng nhập:", isLoggedIn, "Là ứng viên:", isUngVien);
      console.log("Thông tin window.userLoggedIn:", window.userLoggedIn);
      console.log("Thông tin window.userIsUngVien:", window.userIsUngVien);
      console.log("Data từ body:", $('body').data());
      
      if (!isLoggedIn) {
        window.location.href = '/dang-nhap?redirect=' + window.location.pathname;
        return;
      } else if (!isUngVien) {
        alert('Chỉ tài khoản ứng viên mới có thể lưu việc làm!');
        return;
      }
      
      // Kiểm tra lại maCV trước khi gửi request
      if (!maCV) {
        console.error("Lỗi không có maCV");
        alert("Lỗi: không có ID công việc!");
        return;
      }
      
      // Log chi tiết trước khi gửi request
      console.log("Chuẩn bị gửi request AJAX với maCV:", maCV);
      
      // Thử kiểm tra và làm sạch maCV nếu cần
      if (typeof maCV === 'string') {
        // Loại bỏ các ký tự không cần thiết nếu có
        maCV = maCV.trim();
      }
      
      // Cố gắng chuyển đổi maCV thành ObjectId format nếu chưa đúng định dạng
      if (maCV && typeof maCV === 'string' && !maCV.match(/^[0-9a-fA-F]{24}$/)) {
        console.log("maCV không đúng định dạng MongoDB ObjectId, đang cố gắng chuẩn hóa");
        // Nếu là một chuỗi JSON, thử parse
        try {
          const parsedValue = JSON.parse(maCV);
          if (parsedValue && typeof parsedValue === 'string') {
            maCV = parsedValue;
          }
        } catch (e) {
          console.log("Không phải chuỗi JSON hợp lệ:", e);
        }
        console.log("Sau khi chuẩn hóa, maCV:", maCV);
      }
      
      // Tạo dữ liệu đúng theo cấu trúc CSDL (maCV, maND)
      const payload = { maCV: maCV };
      console.log("DEBUG TRANG CHỦ - Dữ liệu sẽ gửi:", payload);
      const jsonData = JSON.stringify(payload);
      console.log("DEBUG TRANG CHỦ - Dữ liệu sau khi stringify:", jsonData);
      
      // Thêm log chi tiết khi bấm nút
      console.log("DEBUG TRANG CHỦ - Bấm nút lưu việc làm yêu thích - timestamp:", new Date().toISOString());
      
      console.log("Đang gửi yêu cầu lưu công việc có ID:", maCV);
      
      // Kiểm tra cookie session
      console.log("COOKIE SESSION:", document.cookie);
      
      // In ra payload cuối cùng để kiểm tra
      console.log("PAYLOAD FINAL (DEBUG):", {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        credentials: 'include', // Đảm bảo cookie được gửi
        body: jsonData
      });

      // Thay đổi API URL để khớp với route
      var apiUrl = '/api/viec-yeu-thich';
      console.log("API URL:" + apiUrl);

      // Sử dụng form data thay vì JSON để xem có khắc phục được vấn đề không
      var formData = new FormData();
      formData.append('maCV', maCV);
      
      // Log form data
      console.log("Form data created with maCV:", maCV);
      
      // Sử dụng fetch API với credentials: 'include'
      console.log("🔵 BƯỚC 1: Bắt đầu gửi request fetch API với credentials: include");
      console.log("🔵 BƯỚC 1: Thời gian:", new Date().toISOString());
      console.log("🔵 BƯỚC 1: URL:", apiUrl);
      console.log("🔵 BƯỚC 1: Method:", "POST");
      console.log("🔵 BƯỚC 1: Headers:", {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      });
      console.log("🔵 BƯỚC 1: Body:", jsonData);
      console.log("🔵 BƯỚC 1: Credentials:", 'include');
      
      // Thêm timestamp để tránh cache
      const timestampedUrl = apiUrl + '?t=' + new Date().getTime();
      
      fetch(timestampedUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'Cache-Control': 'no-cache, no-store, must-revalidate',
          'Pragma': 'no-cache',
          'Expires': '0'
        },
        credentials: 'include', // Đảm bảo cookie được gửi đi
        body: jsonData
      })
      .then(response => {
        console.log("🔵 BƯỚC 2: Nhận được phản hồi từ server");
        console.log("🔵 BƯỚC 2: Status:", response.status);
        console.log("🔵 BƯỚC 2: Status Text:", response.statusText);
        console.log("🔵 BƯỚC 2: Headers:", [...response.headers.entries()]);
        console.log("🔵 BƯỚC 2: Type:", response.type);
        console.log("🔵 BƯỚC 2: URL:", response.url);
        console.log("🔵 BƯỚC 2: Response OK:", response.ok);
        
        if (response.ok) {
          console.log("🔵 BƯỚC 3A: Phản hồi thành công, đang parse JSON");
          return response.json();
        }
        
        // Xử lý các lỗi HTTP
        if (response.status === 401) {
          console.log("🔵 BƯỚC 3B: Lỗi 401 - Chưa đăng nhập");
          alert('Bạn cần đăng nhập để sử dụng chức năng này.');
          window.location.href = '/dang-nhap?redirect=' + window.location.pathname;
          throw new Error('Chưa đăng nhập');
        } else if (response.status === 400) {
          console.log("🔵 BƯỚC 3C: Lỗi 400 - Bad Request");
          return response.text().then(text => {
            console.log("🔵 BƯỚC 3C: Nội dung lỗi:", text);
            if (text.includes('đã được lưu')) {
              console.log("🔵 BƯỚC 3C: Công việc đã được lưu trước đó");
              alert('Việc làm này đã được lưu trước đó');
              btn.html('<i class="fas fa-heart text-danger"></i>');
              btn.prop('disabled', true);
            }
            throw new Error(text);
          });
        }
        
        console.log("🔵 BƯỚC 3D: Lỗi server khác:", response.status);
        throw new Error('Lỗi máy chủ ' + response.status);
      })
      .then(data => {
        console.log("🔵 BƯỚC 4: Lưu công việc thành công");
        console.log("🔵 BƯỚC 4: Dữ liệu phản hồi:", data);
        console.log("🔵 BƯỚC 4: Thời gian:", new Date().toISOString());
        
        // Cập nhật giao diện
        alert("Đã lưu công việc thành công!");
        btn.html('<i class="fas fa-heart text-danger"></i>');
        btn.prop('disabled', true);
        
        console.log("🔵 BƯỚC 5: Hoàn thành xử lý");
      })
      .catch(error => {
        console.error("🔵 LỖI: Fetch API error:", error);
        console.error("🔵 LỖI: Error message:", error.message);
        console.error("🔵 LỖI: Error stack:", error.stack);
        console.error("🔵 LỖI: Thời gian:", new Date().toISOString());
        
        // Nếu không phải lỗi đã xử lý ở trên, thử dùng AJAX
        if (!error.message.includes('Chưa đăng nhập') && 
            !error.message.includes('đã được lưu')) {
          
          console.log("🔵 BƯỚC PHỤC HỒI 1: Thử lại với jQuery AJAX khi fetch thất bại");
          console.log("🔵 BƯỚC PHỤC HỒI 1: URL:", apiUrl);
          console.log("🔵 BƯỚC PHỤC HỒI 1: Data:", jsonData);
          
          // Thêm timestamp để tránh cache
          const ajaxUrl = apiUrl + '?t=' + new Date().getTime();
          
          $.ajax({
            url: ajaxUrl,
            method: 'POST',
            contentType: 'application/json',
            data: jsonData,
            xhrFields: {
              withCredentials: true
            },
            crossDomain: false,
            beforeSend: function(xhr) {
              console.log("🔵 BƯỚC PHỤC HỒI 2: Gửi request AJAX");
              console.log("🔵 BƯỚC PHỤC HỒI 2: Headers:", xhr.getAllResponseHeaders());
              // Thêm các header để tránh cache
              xhr.setRequestHeader('Cache-Control', 'no-cache, no-store, must-revalidate');
              xhr.setRequestHeader('Pragma', 'no-cache');
              xhr.setRequestHeader('Expires', '0');
            },
            success: function(data, textStatus, xhr) {
              console.log("🔵 BƯỚC PHỤC HỒI 3: AJAX thành công");
              console.log("🔵 BƯỚC PHỤC HỒI 3: Status:", textStatus);
              console.log("🔵 BƯỚC PHỤC HỒI 3: Status code:", xhr.status);
              console.log("🔵 BƯỚC PHỤC HỒI 3: Response:", data);
              
              alert("Đã lưu công việc thành công!");
              btn.html('<i class="fas fa-heart text-danger"></i>');
              btn.prop('disabled', true);
            },
            error: function(xhr, status, error) {
              console.error("🔵 BƯỚC PHỤC HỒI LỖI: AJAX lỗi");
              console.error("🔵 BƯỚC PHỤC HỒI LỖI: Status:", status);
              console.error("🔵 BƯỚC PHỤC HỒI LỖI: Error:", error);
              console.error("🔵 BƯỚC PHỤC HỒI LỖI: Status code:", xhr.status);
              console.error("🔵 BƯỚC PHỤC HỒI LỖI: Status text:", xhr.statusText);
              console.error("🔵 BƯỚC PHỤC HỒI LỖI: Response text:", xhr.responseText);
              
              // Thử phân tích phản hồi
              try {
                const responseObj = JSON.parse(xhr.responseText);
                console.error("🔵 BƯỚC PHỤC HỒI LỖI: Parsed response:", responseObj);
              } catch (e) {
                console.error("🔵 BƯỚC PHỤC HỒI LỖI: Không thể parse JSON response");
              }
              
              alert("Lỗi khi lưu công việc: " + (xhr.responseText || xhr.statusText || error));
            }
          });
        }
      });
    });

    // Xử lý khi người dùng nhấn vào các nút bộ lọc
    $('.filter-btn').on('click', function() {
      var keyword = $(this).data('keyword');
      $('#search-input').val(keyword);
      $('#search-form').submit();
    });

    console.log('Trang chủ đã được tải và khởi tạo thành công');
  });
</script>
